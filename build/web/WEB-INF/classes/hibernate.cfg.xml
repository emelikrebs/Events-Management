<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>    
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernatetcc</property>
    <property name="hibernate.hbm2ddl.auto">update</property> <!-- para criar as tabelas sempre que executar pode ser usado o valor create - para apenas atualizar usa-se update -->
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password"></property>
   
    <mapping class="br.edu.ifpr.irati.modelo.Atividade"/>
    <mapping class="br.edu.ifpr.irati.modelo.Pessoa"/>
    <mapping class="br.edu.ifpr.irati.modelo.Usuario"/>
    <mapping class="br.edu.ifpr.irati.modelo.Participante"/>
    <mapping class="br.edu.ifpr.irati.modelo.Ministrante"/>
    <mapping class="br.edu.ifpr.irati.modelo.Inscricao"/>
    <mapping class="br.edu.ifpr.irati.modelo.ItemMenu"/>
    <mapping class="br.edu.ifpr.irati.modelo.Contato"/>
    
  </session-factory>
</hibernate-configuration>
